[program:gunicorn]
user=artisan
startretries=16
autostart=true
autorestart=true
command=gunicorn -c /etc/opt/${PROJECT_NAME}/settings/gunicorn.conf.py ${django_project_name}.wsgi:application
numprocs=1
stdout_logfile=/dev/fd/1
stdout_logfile_maxbytes=0
environment=PYTHONPATH="/etc/opt/${PROJECT_NAME}/settings/:/opt/${PROJECT_NAME}/",PATH="/home/artisan/django_venv/bin:%(ENV_PATH)s"
